<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingStart="25dp"
    android:paddingTop="25dp">
    <!-- Layout design for each Lists -->

    <ImageView
        android:id="@+id/seekerRequestImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/sample_image" />

    <TextView
        android:id="@+id/seekerRequestPlace1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/seekerRequestImage"
        android:layout_toRightOf="@+id/seekerRequestImage"
        android:text="CITA'S PLACE"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/prop_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/seekerRequestPlace1"
        android:layout_alignStart="@+id/seekerRequestPlace1"
        android:layout_below="@+id/seekerRequestPlace1"
        android:layout_marginTop="5dp"
        android:text="Price" />

    <TextView
        android:id="@+id/prop_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/prop_price"
        android:layout_alignStart="@+id/prop_price"
        android:layout_below="@+id/prop_price"
        android:layout_marginTop="5dp"
        android:text="Description" />


</RelativeLayout>