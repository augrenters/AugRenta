                    android:inputType="time"
                    android:focusable="false"/>
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relPanel7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relPanel6"
        android:layout_marginTop="10dp"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/relPanelFriday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvFriday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friday Schedule"
                android:padding="10dp" />

            <LinearLayout
                android:id="@+id/etFriday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingTop="2dp"
                android:layout_below="@+id/tvFriday">
                <EditText
                    android:id="@+id/etFridayFrom"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Start time"
                    android:inputType="time"
                    android:focusable="false"
                    />

                <EditText
                    android:id="@+id/etFridayTo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="End time"
                    android:inputType="time"
                    android:focusable="false"/>
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/setSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SET SCHEDULE"
        android:layout_below="@+id/relPanel8"
        android:visibility="gone"
        />

</RelativeLayout>
